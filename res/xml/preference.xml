<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <CheckBoxPreference
    android:key="PREF_AUTO_UPDATE"
    android:title="Aggiornamento automatico"
    android:summary="Aggiorna gli eventi sismici automaticamente" 
    android:defaultValue="true"
  />                        
	<ListPreference android:key="PREF_UPDATE_FREQ"
		android:dependency="PREF_AUTO_UPDATE"
		android:title="Frequenza di aggiornamento"
		android:summary="Frequenza con cui aggiornare la lista degli eventi"
		android:entries="@array/update_freq_options"
		android:entryValues="@array/update_freq_values"
		android:dialogTitle="Frequenza di aggiornamento"
		android:defaultValue="30" />
	<ListPreference android:key="PREF_MIN_MAG"
		android:title="Magnitudine minima"
		android:summary="Intensita' minima degli eventi da visualizzare"
		android:entries="@array/magnitude_options"
		android:entryValues="@array/magnitude"
		android:dialogTitle="Magnitudine"
		android:defaultValue="3" />
	<ListPreference android:key="PREF_MAP_PINS"
		android:title="Eventi in mappa"
		android:summary="Numero degli eventi da visualizzare sulla mappa"
		android:entries="@array/pins_options"
		android:entryValues="@array/pins"
		android:dialogTitle="Numero eventi"
		android:defaultValue="10" />
</PreferenceScreen>